{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        {% if task.user == null %}
            <p>Créer par <b>Anonyme</b></p>
        {% else %}
            <p>Créer par <b>{{ task.user.username }}</b></p>
        {% endif %}
        {{ form_start(form, {'action' : path('task_edit', { 'id' : task.id })}) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-success pull-right">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
