{% extends 'base.html.twig' %}
{% block body %}
    <div class="container contents">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <p class="alert alert-{{ label }}">Le pseudo ou le mot de passe est incorrect</p>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="container">
        <div class="row">
            <h3>Formulaire de connexion</h3>
            <div class="container form-group">
                {{ form_start(loginForm, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(loginForm) }}
                <button id="submit-login" name="_csrf_token" value="{{ csrf_token('Login') }}" type="submit" class="btn btn-primary">Se connecter</button>
                {{ form_end(loginForm) }}
            </div>
        </div>
    </div>

    <style> {# Appel d'une class de bootstrap pour modifier la checkbox #}
        .form-check-input {
            margin-left: 0;
        }
    </style>
{% endblock %}
